<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="SpomkyLabs\TestBundle\Entity\ResourceOwner" table="resource_owners" inheritance-type="JOINED">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO" />
        </id>
        <field name="public_id" column="public_id" type="string" unique="true" />
        <discriminator-column name="type" type="string" />
        <discriminator-map>
            <discriminator-mapping value="end_user" class="EndUser" />
            <discriminator-mapping value="public_client" class="PublicClient" />
            <discriminator-mapping value="password_client" class="PasswordClient" />
        </discriminator-map>
    </entity>
</doctrine-mapping>
