{
    "name": "spomky-labs/oauth2-server-bundle",
    "type": "symfony-bundle",
    "description": "Symfony2 OAuth2 Server Bundle",
    "keywords": ["OAuth2", "Server", "Bundle", "Symfony2"],
    "homepage": "https://github.com/Spomky-Labs/OAuth2ServerBundle",
    "license": "MIT",
    "authors": [
        {
          "name": "Florent Morselli"
        }
    ],
    "require": {
        "php": ">=5.6",
        "symfony/framework-bundle": "~2.7|~3.0",
        "symfony/security-bundle": "~2.7|~3.0",
        "doctrine/doctrine-bundle": "~1.0",
        "matthiasnoback/symfony-bundle-plugins": "~1.1.0",
        "spomky-labs/oauth2-server-library": "~0.0.0",
        "spomky-labs/jose-interface": "~2.3",
        "symfony/psr-http-message-bridge": "~0.2"
    },
    "require-dev": {
        "puli/twig-extension": "~1.0",
        "puli/composer-plugin": "~1.0",
        "puli/discovery": "~1.0",
        "puli/symfony-bundle": "~1.0",
        "spomky-labs/jose-bundle": "dev-master",
        "doctrine/doctrine-fixtures-bundle": "~2.2",
        "vipsoft/doctrine-data-fixtures-extension": "*",
        "sensio/framework-extra-bundle": "^3.0",
        "behat/behat": "3.*",
        "behat/mink": "*",
        "behat/mink-extension": "*",
        "behat/mink-browserkit-driver":  "*",
        "doctrine/orm": ">=2.2",
        "puli/cli": "~1.0",
        "doctrine/annotations": "~1.0"
    },
    "minimum-stability": "beta",
    "suggest": {
        "spomky-labs/jose-bundle" : "To use JWT (OpenID Connect, JWT clients (confidential clients), JWT access tokens or JWT bearer grant type)"
    },
    "autoload": {
        "psr-4": {
            "SpomkyLabs\\OAuth2ServerBundle\\": ""
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SpomkyLabs\\Bundle\\": "Tests/Bundle",
            "SpomkyLabs\\OAuth2ServerBundle\\Features\\Context\\": "Tests/Context"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.0.x-dev"
        }
    }
}
