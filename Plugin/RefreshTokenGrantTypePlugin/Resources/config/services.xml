<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="oauth2_server.refresh_token.manager.default.class">SpomkyLabs\OAuth2ServerBundle\Plugin\RefreshTokenGrantTypePlugin\Model\RefreshTokenManager</parameter>
        <parameter key="oauth2_server.refresh_token.grant_type.class">SpomkyLabs\OAuth2ServerBundle\Plugin\RefreshTokenGrantTypePlugin\Grant\RefreshTokenGrantType</parameter>
    </parameters>

    <services>
        <service id="oauth2_server.refresh_token.manager.default" class="%oauth2_server.refresh_token.manager.default.class%">
            <argument>%oauth2_server.refresh_token.token_class%</argument>
            <argument type="service" id="doctrine" />
            <argument type="service" id="event_dispatcher" on-invalid="ignore" />
            <call method="setExceptionManager">
                <argument type="service" id="oauth2_server.exception.manager" />
            </call>
            <call method="setConfiguration">
                <argument type="service" id="oauth2_server.configuration" />
            </call>
        </service>

        <service id="oauth2_server.refresh_token.grant_type" class="%oauth2_server.refresh_token.grant_type.class%">
            <call method="setExceptionManager">
                <argument type="service" id="oauth2_server.exception.manager" />
            </call>
            <call method="setRefreshTokenManager">
                <argument type="service" id="oauth2_server.refresh_token.token_manager" />
            </call>
            <tag name="oauth2_server.grant_type" />
        </service>
    </services>
</container>
