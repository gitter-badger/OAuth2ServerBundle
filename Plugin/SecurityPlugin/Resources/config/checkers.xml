<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="oauth2_server.security.checker.client_type" class="SpomkyLabs\OAuth2ServerBundle\Plugin\SecurityPlugin\Annotation\Checker\ClientTypeChecker" public="false">
            <tag name="oauth2_server.security.checker" />
        </service>

        <service id="oauth2_server.security.checker.client_public_id" class="SpomkyLabs\OAuth2ServerBundle\Plugin\SecurityPlugin\Annotation\Checker\ClientPublicIdChecker" public="false">
            <tag name="oauth2_server.security.checker" />
        </service>

        <service id="oauth2_server.security.checker.resource_owner_type" class="SpomkyLabs\OAuth2ServerBundle\Plugin\SecurityPlugin\Annotation\Checker\ResourceOwnerTypeChecker" public="false">
            <tag name="oauth2_server.security.checker" />
        </service>

        <service id="oauth2_server.security.checker.resource_owner_public_id" class="SpomkyLabs\OAuth2ServerBundle\Plugin\SecurityPlugin\Annotation\Checker\ResourceOwnerPublicIdChecker" public="false">
            <tag name="oauth2_server.security.checker" />
        </service>

        <service id="oauth2_server.security.checker.scope" class="SpomkyLabs\OAuth2ServerBundle\Plugin\SecurityPlugin\Annotation\Checker\ScopeChecker" public="false">
            <tag name="oauth2_server.security.checker" />
        </service>
    </services>
</container>
