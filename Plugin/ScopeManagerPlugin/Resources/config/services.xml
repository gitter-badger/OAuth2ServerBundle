<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="oauth2_server.scope.manager.class">SpomkyLabs\OAuth2ServerBundle\Plugin\ScopeManagerPlugin\Model\ScopeManager</parameter>
    </parameters>

    <services>
        <service id="oauth2_server.scope.manager" class="%oauth2_server.scope.manager.class%">
            <argument>%oauth2_server.scope.policy%</argument>
            <argument>%oauth2_server.scope.available_scope%</argument>
            <argument>%oauth2_server.scope.default_scope%</argument>
            <argument type="service" id="oauth2_server.exception.manager" />
        </service>
    </services>
</container>
