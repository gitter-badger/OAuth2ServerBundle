<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="oauth2_server.implicit_grant_type.class">SpomkyLabs\OAuth2ServerBundle\Plugin\ImplicitGrantTypePlugin\Grant\ImplicitGrantType</parameter>
    </parameters>

    <services>
        <service id="oauth2_server.implicit_grant_type" class="%oauth2_server.implicit_grant_type.class%">
            <call method="setAccessTokenManager">
                <argument type="service" id="oauth2_server.implicit_grant_type.access_token_manager" />
            </call>
            <call method="setAccessTokenTypeManager">
                <argument type="service" id="oauth2_server.access_token_type_manager" />
            </call>
            <tag name="oauth2_server.response_type" />
        </service>
    </services>
</container>
