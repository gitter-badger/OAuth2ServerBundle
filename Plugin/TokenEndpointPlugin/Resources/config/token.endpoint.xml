<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="oauth2_server.token_endpoint.controller.class">SpomkyLabs\OAuth2ServerBundle\Plugin\TokenEndpointPlugin\Controller\TokenEndpointController</parameter>

        <parameter key="oauth2_server.token_endpoint.class">SpomkyLabs\OAuth2ServerBundle\Plugin\TokenEndpointPlugin\Endpoint\TokenEndpoint</parameter>
    </parameters>

    <services>
        <service id="oauth2_server.token_endpoint.controller" class="%oauth2_server.token_endpoint.controller.class%" scope="request">
            <argument type="service" id="oauth2_server.token_endpoint" />
        </service>

        <service id="oauth2_server.token_endpoint" class="%oauth2_server.token_endpoint.class%">
            <call method="setExceptionManager">
                <argument type="service" id="oauth2_server.exception.manager" />
            </call>
            <call method="setAccessTokenType">
                <argument type="service" id="oauth2_server.token_endpoint.access_token_type" />
            </call>
            <call method="setClientManagerSupervisor">
                <argument type="service" id="oauth2_server.client_manager_supervisor" />
            </call>
            <call method="setAccessTokenManager">
                <argument type="service" id="oauth2_server.token_endpoint.access_token_manager" />
            </call>
            <call method="setRefreshTokenManager">
                <argument type="service" id="oauth2_server.refresh_token.token_manager" on-invalid="ignore" />
            </call>
            <call method="setScopeManager">
                <argument type="service" id="oauth2_server.scope.manager" />
            </call>
            <call method="setEndUserManager">
                <argument type="service" id="oauth2_server.token_endpoint.end_user_manager" />
            </call>
        </service>
    </services>
</container>
