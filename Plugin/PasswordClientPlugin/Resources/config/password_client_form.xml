<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="oauth2_server.password_client.form" factory-method="createNamed" factory-service="form.factory" class="Symfony\Component\Form\Form">
            <argument>%oauth2_server.password_client.form_name%</argument>
            <argument>%oauth2_server.password_client.form_type%</argument>
            <argument>null</argument>
            <argument type="collection">
                <argument key="validation_groups">%oauth2_server.password_client.form_validation_groups%</argument>
            </argument>
        </service>

        <service id="oauth2_server.password_client.form_type" class="SpomkyLabs\OAuth2ServerBundle\Plugin\PasswordClientPlugin\Form\Type\PasswordClientFormType">
            <tag name="form.type" alias="password_client" />
        </service>

        <service id="oauth2_server.password_client.form_handler.default" class="SpomkyLabs\OAuth2ServerBundle\Plugin\PasswordClientPlugin\Form\Handler\PasswordClientFormHandler" scope="request">
            <argument type="service" id="oauth2_server.password_client.manager" />
        </service>
    </services>
</container>
