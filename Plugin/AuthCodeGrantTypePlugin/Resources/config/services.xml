<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="oauth2_server.auth_code.grant_type_class">SpomkyLabs\OAuth2ServerBundle\Plugin\AuthCodeGrantTypePlugin\Grant\AuthCodeGrantType</parameter>
    </parameters>

    <services>
        <service id="oauth2_server.auth_code.grant_type" class="%oauth2_server.auth_code.grant_type_class%">
            <call method="setExceptionManager">
                <argument type="service" id="oauth2_server.exception.manager" />
            </call>
            <call method="setAuthCodeManager">
                <argument type="service" id="oauth2_server.auth_code.manager" />
            </call>
            <tag name="oauth2_server.grant_type" />
            <tag name="oauth2_server.response_type" />
        </service>
    </services>
</container>
