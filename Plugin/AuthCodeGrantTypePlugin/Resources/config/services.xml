<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="oauth2_server.auth_code.grant_type_class">SpomkyLabs\OAuth2ServerBundle\Plugin\AuthCodeGrantTypePlugin\Grant\AuthCodeGrantType</parameter>
        <parameter key="oauth2_server.auth_code.manager.default.class">SpomkyLabs\OAuth2ServerBundle\Entity\AuthCodeManager</parameter>
    </parameters>

    <services>
        <service id="oauth2_server.auth_code.grant_type" class="%oauth2_server.auth_code.grant_type_class%">
            <argument type="service" id="oauth2_server.exception.manager" />
            <argument type="service" id="oauth2_server.auth_code.manager" />
            <tag name="oauth2_server.grant_type" />
            <tag name="oauth2_server.response_type" />
        </service>

        <service id="oauth2_server.auth_code.manager.default" class="%oauth2_server.auth_code.manager.default.class%">
            <argument>%oauth2_server.auth_code.class%</argument>
            <argument type="service" id="doctrine" />
            <argument type="service" id="oauth2_server.exception.manager" />
            <argument type="service" id="oauth2_server.configuration" />
            <argument type="service" id="event_dispatcher" on-invalid="ignore" />
        </service>
    </services>
</container>
